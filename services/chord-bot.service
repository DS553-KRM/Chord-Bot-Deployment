[Unit]
Description=Chord-Bot local app
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{RUN_AS_USER}}
WorkingDirectory={{CHORD_BOT_DIR}}
ExecStart=/bin/bash -lc 'exec {{CHORD_BOT_VENV}}/bin/python app.py'
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1
Environment=GRADIO_SERVER_NAME=0.0.0.0
Environment=GRADIO_SERVER_PORT={{CHORD_BOT_PORT}}
StandardOutput=append:{{CHORD_BOT_LOG_DIR}}/stdout.log
StandardError=append:{{CHORD_BOT_LOG_DIR}}/stderr.log

[Install]
WantedBy=multi-user.target

